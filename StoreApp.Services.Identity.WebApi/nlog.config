<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<targets>
		<!-- Konsol ve dosya logları -->
		<target xsi:type="Console" name="console" layout="${longdate} | ${level:uppercase=true} | ${logger} | ${message} ${exception}" />
		<target xsi:type="File" name="file" fileName="Logs/log-${shortdate}.txt"
				layout="${longdate} | ${level:uppercase=true} | ${logger} | ${message} ${exception}" />
	</targets>

	<rules>
		<!-- Tüm log seviyeleri için -->
		<logger name="*" minlevel="Trace" writeTo="console,file" />
	</rules>
</nlog>